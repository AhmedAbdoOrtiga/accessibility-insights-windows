<UserControl x:Class="AccessibilityInsights.DesktopUI.Controls.FabricIconControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AccessibilityInsights.DesktopUI.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="24" d:DesignWidth="24"
             AutomationProperties.Name="{Binding Path=GlyphName,RelativeSource={RelativeSource Mode=Self}}">
    <TextBlock Name="lblIcon" FontFamily="/AccessibilityInsights.DesktopUI;component/Resources/#Fabric MDL2 Assets" Padding="0" 
               AutomationProperties.Name="{Binding Path=GlyphName,RelativeSource={RelativeSource Mode=FindAncestor,AncestorType=local:FabricIconControl}}"/>
</UserControl>
